---
const title = "Fishstick Labs - Infrastructure & DevOps Advisory";
const description = "Twenty years designing, scaling, and hardening infrastructure. Independent technical perspective on DevOps, SRE, and platform engineering for early-stage companies.";
const url = "https://fishsticklabs.com";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="DevOps, SRE, Platform Engineering, Infrastructure Advisory, Cloud Cost Optimization, Kubernetes, Technical Strategy" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <link rel="canonical" href={url} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script async data-id="101416164" src="//static.getclicky.com/js"
    ></script>
    <script
      data-goatcounter="https://fishsticklabs.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Fishstick Labs",
        "description": "Infrastructure and DevOps advisory services for early-stage companies",
        "url": "https://fishsticklabs.com",
        "founder": {
          "@type": "Person",
          "name": "Chris Dodds",
          "jobTitle": "Infrastructure Advisor",
          "sameAs": "https://linkedin.com/in/doddschris"
        },
        "areaServed": "Worldwide",
        "serviceType": [
          "DevOps Consulting",
          "SRE Consulting",
          "Platform Engineering",
          "Cloud Cost Optimization",
          "Infrastructure Architecture"
        ]
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  body {
    background: #1a1d29;
    background-image: radial-gradient(
        circle at 20% 50%,
        rgba(139, 92, 246, 0.03) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(236, 72, 153, 0.02) 0%,
        transparent 50%
      );
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    color: #e8eaed;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    line-height: 1.6;
  }

  #main {
    padding: 60px 20px 40px;
    margin: 0 auto;
    max-width: 700px;
    width: 100%;
  }

  h1 {
    font-size: 3.5em;
    font-weight: 700;
    margin: 0 0 0.4em 0;
    color: #ffffff;
    letter-spacing: -0.02em;
    line-height: 1.1;
    position: relative;
  }

  h1::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #8b5cf6, #ec4899);
    border-radius: 2px;
  }

  .fishstick-icon {
    width: 140px;
    height: 50px;
    margin-bottom: 25px;
    filter: drop-shadow(0 4px 12px rgba(251, 191, 36, 0.2));
  }

  .tagline {
    font-size: 1.3em;
    color: #b4b8cf;
    margin: 0 0 60px 0;
    font-weight: 400;
    line-height: 1.6;
  }

  section {
    width: 100%;
    margin-bottom: 60px;
  }

  section h2 {
    font-size: 2em;
    font-weight: 600;
    margin: 0 0 30px 0;
    color: #f5f5f7;
    letter-spacing: -0.02em;
  }

  section p {
    font-size: 1.125em;
    margin: 0 0 16px 0;
    color: #d8dae5;
    line-height: 1.75;
  }

  .capabilities {
    color: #a78bfa !important;
    margin-top: 28px !important;
    font-weight: 500;
    font-size: 1.05em !important;
    padding: 16px 24px;
    background: rgba(139, 92, 246, 0.08);
    border-radius: 8px;
    border: 1px solid rgba(139, 92, 246, 0.15);
  }

  .intro-text {
    font-size: 1.1em !important;
  }

  ul {
    padding-left: 0;
    list-style: none;
    color: #d1d5db;
    line-height: 1.85;
    margin: 0 0 30px 0;
  }

  ul li {
    margin-bottom: 16px;
    position: relative;
    padding: 12px 12px 12px 32px;
    background: rgba(139, 92, 246, 0.04);
    border-radius: 8px;
    border-left: 2px solid rgba(139, 92, 246, 0.3);
    transition: all 0.2s ease;
  }

  ul li:hover {
    background: rgba(139, 92, 246, 0.08);
    border-left-color: #a78bfa;
    transform: translateX(4px);
  }

  ul li::before {
    content: "â†’";
    position: absolute;
    left: 12px;
    color: #a78bfa;
    font-weight: 600;
  }

  .contact-details {
    font-size: 1em !important;
    margin-top: 25px !important;
    color: #9ca3af !important;
  }

  #latest-post a {
    display: block;
    text-decoration: none;
    border: none;
  }

  #latest-post h3 {
    color: #ffffff;
    font-size: 1.6em;
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  #latest-post .post-excerpt {
    color: #d8dae5;
    font-size: 1.05em;
    line-height: 1.7;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
    position: relative;
  }

  #latest-post .post-excerpt::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3em;
    background: linear-gradient(to bottom, transparent, rgba(26, 29, 41, 0.9));
    pointer-events: none;
  }

  #latest-post .post-excerpt p {
    color: #d8dae5;
    margin: 0 0 16px 0;
  }

  #latest-post .post-excerpt p:last-child {
    margin-bottom: 0;
  }

  #latest-post .post-excerpt a {
    color: #a78bfa;
    display: inline;
  }

  #latest-post .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
  }

  #latest-post .post-meta {
    color: #9ca3af;
    font-size: 0.95em;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  #latest-post .post-meta .separator {
    color: #6b7280;
  }

  #latest-post .read-more {
    color: #a78bfa;
    font-size: 0.95em;
    white-space: nowrap;
  }

  a {
    color: #a78bfa;
    text-decoration: none;
    transition: all 0.2s ease;
    border-bottom: 1px solid rgba(167, 139, 250, 0.3);
    padding-bottom: 2px;
  }

  a:hover,
  a:focus {
    color: #c4b5fd;
    border-bottom: 1px solid #c4b5fd;
  }

  footer {
    margin-top: 80px;
    padding: 30px 0;
    color: #6b7280;
    font-size: 0.95em;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  footer p {
    margin: 0;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5em;
    }

    .tagline {
      font-size: 1.1em;
    }

    section {
      padding: 30px 20px;
    }

    section h2 {
      font-size: 1.8em;
    }

    #main {
      padding: 40px 20px;
    }

    ul li {
      font-size: 0.95em;
      padding: 10px 10px 10px 28px;
    }

    .intro-text {
      font-size: 1em !important;
    }
  }
</style>

