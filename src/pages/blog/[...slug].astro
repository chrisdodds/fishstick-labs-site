---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};
---

<Layout>
  <div id="main">
    <article class="blog-post">
      <header class="post-header">
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <span>{post.data.author}</span>
          <span class="separator">•</span>
          <time class="post-date">{formatDate(post.data.pubDate)}</time>
        </div>
      </header>

      <div class="post-content">
        <Content />
      </div>
    </article>

    <div style="margin-top: 60px;">
      <a href="/blog" style="font-size: 1.1em;">← All posts</a>
    </div>
  </div>
</Layout>

<style is:global>
  .blog-post {
    max-width: 700px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 50px;
    text-align: left;
  }

  .post-header h1 {
    font-size: 2.5em;
    margin: 0 0 15px 0;
    line-height: 1.2;
  }

  .post-meta {
    color: #9ca3af;
    font-size: 1em;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .post-meta .separator {
    color: #6b7280;
  }

  .post-date {
    color: #9ca3af;
    font-size: 1em;
  }

  .post-content {
    color: #e8eaed;
    font-size: 1.1em;
    line-height: 1.8;
  }

  .post-content h2 {
    font-size: 1.8em;
    color: #ffffff;
    margin: 50px 0 20px 0;
    font-weight: 600;
  }

  .post-content h3 {
    font-size: 1.4em;
    color: #ffffff;
    margin: 40px 0 15px 0;
    font-weight: 600;
  }

  .post-content p {
    margin: 0 0 25px 0;
  }

  .post-content a {
    color: #60a5fa;
    border-bottom: 1px solid rgba(96, 165, 250, 0.3);
    display: inline;
    word-break: break-word;
  }

  .post-content a:hover {
    color: #93c5fd;
    border-bottom-color: #93c5fd;
  }

  .post-content ul,
  .post-content ol {
    margin: 0 0 25px 0;
    padding-left: 30px;
  }

  .post-content li {
    margin-bottom: 10px;
  }

  .post-content code {
    background: rgba(255, 255, 255, 0.05);
    padding: 3px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: "Courier New", monospace;
  }

  .post-content pre {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 0 0 25px 0;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .post-content pre code {
    background: none;
    padding: 0;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .post-content blockquote {
    border-left: 3px solid #60a5fa;
    padding-left: 20px;
    margin: 30px 0;
    color: #d1d5db;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2em;
    }

    .post-content {
      font-size: 1em;
    }
  }
</style>

