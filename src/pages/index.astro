---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
const latestPostData = await (async () => {
  const filtered = allPosts
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

  if (!filtered) return null;

  const { Content } = await filtered.render();
  return { post: filtered, Content };
})();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};
---

<Layout>
  <div id="main">
    <h1>Fishstick Labs</h1>
    <p class="tagline">
      Twenty years designing, scaling, and hardening infrastructure. Still curious. Still allergic to overengineering.
    </p>

    <section id="about">
      <p>
        Independent perspective on DevOps, SRE, and platform engineering. Occasionally helping early-stage teams get the hard infrastructure calls right.
      </p>
      <p class="capabilities">
        Infrastructure • Platform Engineering • Cost Optimization • Technical Strategy
      </p>
    </section>

    <section id="thinking">
      <h2>What I Think About</h2>
      <p class="intro-text">
        After two decades in infrastructure work, I've developed opinions on:
      </p>
      <ul>
        <li>When to scale and when to wait, and how to tell the difference</li>
        <li>Cloud cost optimization from architecture to line-item</li>
        <li>Platform engineering for teams under 50 people</li>
        <li>Kubernetes: when it helps and when it's expensive overkill</li>
        <li>Building SRE practices that fit the company you actually have</li>
        <li>Migration planning that survives contact with reality</li>
      </ul>
    </section>

    {
      latestPostData && (
        <section id="latest-post">
          <h2>Latest Writing</h2>
          <article>
            <a href={`/blog/${latestPostData.post.slug}`}>
              <h3>{latestPostData.post.data.title}</h3>
            </a>
            <div class="post-excerpt">
              <latestPostData.Content />
            </div>
            <div class="post-footer">
              <div class="post-meta">
                <span>{latestPostData.post.data.author}</span>
                <span class="separator">•</span>
                <time>{formatDate(latestPostData.post.data.pubDate)}</time>
              </div>
              <a href={`/blog/${latestPostData.post.slug}`} class="read-more">Read more →</a>
            </div>
          </article>
          <hr style="border: none; border-top: 1px solid rgba(255, 255, 255, 0.08); margin: 40px 0;" />
          <div>
            <a href="/blog">View all posts →</a>
          </div>
        </section>
      )
    }

    <section id="contact">
      <h2>Contact</h2>
      <p>Interested in talking? Email <a href="mailto:contact@fishsticklabs.com">contact@fishsticklabs.com</a></p>
      <p class="contact-details">
        Based in Oklahoma City<br/>
        LinkedIn: <a href="https://linkedin.com/in/doddschris">linkedin.com/in/doddschris</a>
      </p>
    </section>
    <footer>
      <p>&copy; 2025 - Fishstick Labs</p>
    </footer>
  </div>
</Layout>
